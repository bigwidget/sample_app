<header>
	<div class="site-title">
		<%= link_to "Liberty Hive", root_path, :class => "site-title" %>
	</div>
	<nav>
    <ul>
      <li><%= link_to "Home", links_path %></li>
	    <% if signed_in? %>
		  <li><%= link_to "Submit", new_link_path %></li>
			<li><%= link_to current_user.name, current_user %></li>
		  <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
		  <% else %>
		 	<li><%= link_to "Sign in", signin_path %></li>
		  <% end %>
    </ul>
  </nav>
	<div class="bar"></div>
</header>