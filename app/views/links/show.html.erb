<table>
	<tr>by <%= User.find(@link.user_id).name %></tr><br />
	<tr><%=@link.headline%></tr><br />
	<tr>Link ID: <%= @link.id %></tr>
</table><br /><br />

<h1>Submit a comment</h1>

<%= form_for current_user.comments.build( :link_id => @link.id, 
                                        	:parent_comment_id => nil ) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :content %><br />
		<%= f.text_area :content %>
	</div>
	<div><%= f.hidden_field :link_id %></div>
	<div><%= f.hidden_field :parent_comment_id %></div>
	<div class="actions">
		<%= f.submit "Submit" %>
	</div>
<% end %>

<% unless @comments.empty? %>
<table class="microposts" summary="all comments">
		<%= render @comments %>
</table>
<% end %>