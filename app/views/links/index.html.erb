<h1>All links</h1>
<span><%= link_to "Submit link", new_link_path %></span>

<% if !signed_in? %>
<div id="fb-root"></div>
<script src="http://connect.facebook.net/en_US/all.js"></script>
<script>
   FB.init({ 
      appId:'130370623700799', cookie:true, 
      status:true, xfbml:true 
   });
</script>
<fb:login-button>Login with Facebook</fb:login-button>
<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>

<table class="microposts" summary="All submitted links">
		<%= render @links %>
</table>

<%= will_paginate @links %>